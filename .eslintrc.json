{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      },
      "sourceType": "module"
    },
  
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
  
    "plugins": [
      "react",
      "require-path-exists"
    ],
  
    "extends": [
      "standard-jsx",
      "standard",
      "standard-react",
      "plugin:require-path-exists/recommended"
    ],
  
    "rules": {
      "react/jsx-no-bind": ["error", {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }],
      "react/no-did-update-set-state": "error",
      "react/no-unknown-property": "error",
      "react/no-unused-prop-types": "error",
      "react/prop-types": "error",
      "react/react-in-jsx-scope": "error",
      "semi": [2, "always"]
    }
  }